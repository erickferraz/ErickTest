@page
@model ErickTest.Pages_Premiums.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Home</h1>

<p>
    <a asp-page="Create">Cadastrar novo aluno</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Premium[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Premium[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Premium[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Premium[0].Studant)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Premium) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Studant.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.id">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
