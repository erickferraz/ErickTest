@page
@model ErickTest.Pages_Students.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar novo estudante</h1>

<h4>Estudante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Studant.Name" class="control-label"></label>
                <input asp-for="Studant.Name" class="form-control" />
                <span asp-validation-for="Studant.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Studant.Email" class="control-label"></label>
                <input asp-for="Studant.Email" class="form-control" />
                <span asp-validation-for="Studant.Email" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar partial a lista</a>
</div>

