@page
@model ErickTest.Pages_Students.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Estudante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Studant.id" />
            <div class="form-group">
                <label asp-for="Studant.Name" class="control-label"></label>
                <input asp-for="Studant.Name" class="form-control" />
                <span asp-validation-for="Studant.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Studant.Email" class="control-label"></label>
                <input asp-for="Studant.Email" class="form-control" />
                <span asp-validation-for="Studant.Email" class="text-danger"></span>
            </div> <br>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div> <br>

<div>
    <a asp-page="./Index">Voltar para a lista</a>
</div>

