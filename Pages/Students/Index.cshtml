@page
@model ErickTest.Pages_Students.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Home</h1>

<p>
    <a asp-page="Create">Cadastrar novo estudante</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Studant[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Studant[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Studant) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.id">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
